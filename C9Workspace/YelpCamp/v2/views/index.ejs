<% include partials/header %>

<div class="container">
    
    <header class="jumbotron">
    
        <div class="container">
            <h1>Welcome To YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>  </p>
        </div>
    </header>
        
        <!--using the row class for this div we begin creating a grid of all the things contained in this div-->
        <!--There is also some inline styling, that will later be moved to the css, but it just stretchs the grid items to similar sizes-->
    <div class="row" style="display:flex; flex-wrap: wrap;">
        <!--Using the col-lg-12 class we specify that this coloumn is going to take up the entire width of the grid. Read more about it here https://v4-alpha.getbootstrap.com/layout/grid/#how-it-works-->
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>
        
     <div class="row" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <!--the bootstrap class thumbnail scales images for us, and fits them into the grid EZPZ-->
            <div class="thumbnail">
                 <img src="<%=campground.image %>">
                     <div class="caption">
                         <h4><%= campground.name %></h4>
                     </div>
                     <p>
                         <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                     </p>
            </div>
        <!--<h4> <%= campground.name %> </h4>-->
        </div>
        <% }) %>
    </div>
        
    </div>
        

</div>

<% include partials/footer %>